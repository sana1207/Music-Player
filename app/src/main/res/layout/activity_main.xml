<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center" android:orientation="vertical" tools:context=".MainActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/image"/>

    <SeekBar
            android:layout_height="wrap_content"
            android:layout_width="300dp"
            android:layout_marginTop="30dp"
            android:id="@+id/positionBar"/>

    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

    <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/elapsedTimeLabel"
            android:layout_marginLeft="40dp"
            android:text="0:11"/>

    <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/remainingTimeLabel"
            android:layout_marginLeft="240dp"
            android:text="-1:11"/>

</LinearLayout>

    <Button
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:layout_marginTop="40dp"
            android:id="@+id/playBtn"
            android:onClick="playBtnClick"
            android:background="@drawable/play"/>


    <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp">

    <ImageView
            android:layout_height="18dp"
            android:layout_width="18dp"
            android:src="@drawable/sound"/>

    <SeekBar
            android:layout_height="wrap_content"
            android:layout_width="300dp"
            android:id="@+id/volumeBar"
            android:max="100"
            android:progress="50"/>

    <ImageView
            android:layout_height="26dp"
            android:layout_width="26dp"
            android:src="@drawable/sound2"/>

     </LinearLayout>
</LinearLayout>